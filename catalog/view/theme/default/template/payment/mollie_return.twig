{{ header }}

<div id="container" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>

  <div class="row">
    {{ column_left }}
    {% set subtract_first = column_left ? 3 : 0 %}
    {% set subtract_second = column_right ? 3 : 0 %}
    {% set content_width = 12 - subtract_first - subtract_second %}
    <div id="content" class="col-sm-{{ content_width }}">
      {{ content_top }}
      <h2>{{ message_title }}</h2>
      <br/>
      <p>{{ message_text }}</p>
      {% if mollie_error is defined %}
      <p><code>{{ mollie_error }}</code></p>
      {% endif %}

      {% if button_retry is defined %}
      <p><a href="{{ checkout_url }}" class="button btn btn-primary">{{ button_retry }}</a></p>
      {% endif %}
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>

{{ footer }}